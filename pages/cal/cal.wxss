/* pages/cal/cal.wxss */
page{
    height: 100%;
}
.container{
    height: 100%;
    color: #fff;
    background-color:#000;
}

.screen-container{
    padding: 50rpx 30rpx 0;
}
.screen{
    font-size: 160rpx;
    text-align: right;
}

.btn-group{
    display: flex;
    flex-direction: row;
    padding: 0 15rpx;      
}
.btn-group:first-child .btn{
    color: #000;
    background-color: #a6a6a6;
}

.btn{
    width: 150rpx;
    height: 150rpx;
    line-height: 150rpx;
    border-radius: 50%;
    margin: 15rpx;
    font-size: 60rpx;
    text-align: center;
    color: #fff;
    background-color: #333;
}

.btn-group .btn:last-child{
    color: #fff;
    background-color: #ff9500;
}